    <changeSet id="ugandaemr-06272019-1637" author="ssmusoke">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM scheduler_task_config
                WHERE schedulable_class = 'org.openmrs.module.ugandaemrsync.tasks.SendViralLoadRequestTaskToCentralServer'
            </sqlCheck>
        </preConditions>
        <comment>Inserting MCH Lost to Followup Exit Task into 'schedule_task_config' table</comment>
        <insert tableName="scheduler_task_config">
            <column name="name" value="Send Viral Load Request to Central Server Task" />
            <column name="description" value="Sends a viral load request to the central server" />
            <column name="schedulable_class" value="org.openmrs.module.ugandaemrsync.tasks.SendViralLoadRequestTaskToCentralServer" />
            <column name="start_time_pattern" value="MM/dd/yyyy HH:mm:ss" />
            <column name="start_time" valueDate="2019-06-27T11:59:59" />
            <column name="repeat_interval" value="3600" />
            <column name="date_created" valueDate="CURRENT_TIMESTAMP" />
            <column name="created_by" value="1" />
            <column name="start_on_startup" value="1"/>
            <column name="started" value="1"/>
            <column name="uuid" value="5eec5417-6a6d-4598-a7a9-03e27ca4cb91" />
        </insert>

    </changeSet>

